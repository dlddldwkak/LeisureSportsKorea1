<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/regEmailText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPassword"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/regNameText"
        android:layout_alignStart="@+id/regNameText" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/regEmailText"
        android:layout_alignLeft="@+id/regEmailText"
        android:layout_alignStart="@+id/regEmailText" />

    <EditText
        android:id="@+id/regNameText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/regPhoneText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regNameText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:layout_marginTop="84dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp" />

    <EditText
        android:id="@+id/regSexText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/regPhoneText"
        android:layout_alignStart="@+id/regPhoneText"
        android:layout_below="@+id/regPhoneText"
        android:ems="10"
        android:hint="Sex"
        android:inputType="text" />

    <EditText
        android:id="@+id/regAgeText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/regSexText"
        android:layout_alignEnd="@+id/regPhoneText"
        android:layout_alignRight="@+id/regPhoneText"
        android:ems="10"
        android:hint="Age"
        android:inputType="text" />

    <EditText
        android:id="@+id/regNationText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regSexText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Nationality"
        android:inputType="text" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Register"
        android:layout_below="@+id/regNationText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>